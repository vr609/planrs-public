<div class="header">
  <div class="badge">Chapter 1 ¬∑ Activity 2</div>
  <h1>üìÖ Money Timeline!</h1>
  <p class="sub">Put these events in the correct historical order!</p>
  <p class="hint">‚å®Ô∏è Click to select ‚Üí use ‚Üë‚Üì arrow keys or buttons to move</p>
</div>

<div class="list" id="sortList"></div>

<div class="arrows">
  <button class="arrow-btn" id="upBtn" onclick="moveSelected(-1)">‚Üë Move Up</button>
  <button class="arrow-btn" id="downBtn" onclick="moveSelected(1)">‚Üì Move Down</button>
</div>

<div class="actions">
  <button class="btn btn-check" onclick="checkOrder()">Check Order ‚úÖ</button>
  <button class="btn btn-reset" onclick="resetList()">Shuffle & Reset üîÑ</button>
</div>
<div class="result" id="result"></div>
<div class="score" id="score"></div>
<div class="planrs">PLANRS</div>

<script>
const ITEMS=[
  {text:"üîÑ Barter system ‚Äî people traded goods directly",order:1},
  {text:"ü™ô Metal coins invented ‚Äî 600 BC in Lydia",order:2},
  {text:"üìú Paper money invented in China ‚Äî 700 AD",order:3},
  {text:"üè¶ Banks start issuing paper notes ‚Äî 1800s",order:4},
  {text:"üí≥ Credit and debit cards introduced ‚Äî 1950s",order:5},
  {text:"üì± UPI & digital payments launched in India ‚Äî 2016",order:6},
];
let current=[],selectedIdx=null;

function shuffle(arr){return [...arr].sort(()=>Math.random()-0.5)}

function render(){
  const list=document.getElementById('sortList');
  list.innerHTML='';
  current.forEach((item,i)=>{
    const div=document.createElement('div');
    div.className='item'+(selectedIdx===i?' selected':'');
    div.tabIndex=0;
    div.innerHTML=`<div class="num">${i+1}</div><span class="item-text">${item.text}</span><span class="handle">‚†ø</span>`;
    div.addEventListener('click',()=>{selectedIdx=(selectedIdx===i?null:i);render()});
    div.addEventListener('keydown',e=>{
      if(e.key==='ArrowUp'){e.preventDefault();moveSelected(-1)}
      if(e.key==='ArrowDown'){e.preventDefault();moveSelected(1)}
    });
    list.appendChild(div);
  });
  if(selectedIdx!==null)list.children[selectedIdx]?.focus();
  document.getElementById('upBtn').disabled=selectedIdx===0||selectedIdx===null;
  document.getElementById('downBtn').disabled=selectedIdx===current.length-1||selectedIdx===null;
}

function moveSelected(dir){
  if(selectedIdx===null)return;
  const n=selectedIdx+dir;
  if(n<0||n>=current.length)return;
  [current[selectedIdx],current[n]]=[current[n],current[selectedIdx]];
  selectedIdx=n;
  render();
}

function checkOrder(){
  let correct=0;
  current.forEach((item,i)=>{
    const el=document.getElementById('sortList').children[i];
    el.classList.remove('correct-pos','wrong-pos');
    if(item.order===i+1){el.classList.add('correct-pos');correct++}
    else el.classList.add('wrong-pos');
  });
  const r=document.getElementById('result');
  const s=document.getElementById('score');
  if(correct===current.length){
    r.textContent='üéâ Perfect! You know your money history!';
    s.textContent='Score: 6/6 ‚Äî History Champion! üèÜ'
  } else {
    r.textContent=`ü§î ${correct}/6 in the right place ‚Äî keep rearranging!`;
    s.textContent='Green = correct position ¬∑ Red = needs moving'
  }
}

function resetList(){
  current=shuffle(ITEMS);
  selectedIdx=null;
  document.getElementById('result').textContent='';
  document.getElementById('score').textContent='';
  document.querySelectorAll('.item').forEach(i=>i.classList.remove('correct-pos','wrong-pos'));
  render();
}

document.addEventListener('keydown',e=>{
  if(e.key==='ArrowUp'){e.preventDefault();moveSelected(-1)}
  if(e.key==='ArrowDown'){e.preventDefault();moveSelected(1)}
});

resetList();
</script>
</body>
